<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.ClassFunRepo" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="android:colorPrimary">@color/primaryColor</item>
        <item name="colorPrimaryVariant">@color/primaryLightColor</item>
        <item name="colorPrimaryDark">@color/primaryDarkColor</item>
        <item name="colorOnPrimary">@color/secondTextColor</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/secondColor</item>
        <item name="colorSecondaryVariant">@color/secondDarkColor</item>
        <item name="colorOnSecondary">@color/secondLightColor</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="customButtons">
        <item name="android:textColor">@color/primaryDarkColor</item>
        <item name="android:background">@drawable/good_button</item>
        <item name="android:padding">10dp</item>
    </style>

    <style name="customButtonBad">
        <item name="android:textColor">@color/primaryDarkColor</item>
        <item name="android:background">@drawable/button_bad</item>
        <item name="android:padding">10dp</item>
    </style>

    <style name="titleFont" >
        <item name="android:textSize">20sp</item>
        <item name="android:textStyle">bold</item>
    </style>

</resources>