<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.ClassFunRepo" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="android:colorPrimary">@color/primaryColor</item>
        <item name="colorPrimaryVariant">@color/primaryLightColor</item>
        <item name="colorPrimaryDark">@color/primaryDarkColor</item>
        <item name="colorOnPrimary">@color/primaryTextColor</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/secondColor</item>
        <item name="colorSecondaryVariant">@color/secondDarkColor</item>
        <item name="colorOnSecondary">@color/secondLightColor</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="customButtons" parent="android:style/Widget.Button">
        <item name="android:textColor">@color/primaryDarkColor</item>
        <item name="android:background">@drawable/ic_launcher_background</item>
        <item name="android:padding">10dp</item>
    </style>

    <style name="custonTextEdit" parent="android:style/Widget.TextView">
        <item name="android:textColor">@color/primaryDarkColor</item>
        
    </style>
</resources>